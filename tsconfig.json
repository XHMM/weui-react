{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable","es2015", "es2016", "es2018"],
    "jsx": "react",
    "esModuleInterop": true, // don't omit this, or react-testing-library will fail "Cannot read property 'createElement' of undefined"
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "build",
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
